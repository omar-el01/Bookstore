{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid p-4 ">
<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6 border border-5 bg-light p-4 ">
<div class="form">
    <h3 class="mb-4 text-center">Create an acount :</h3>
    {{ form_start(registrationForm) }}
        <div class="form-group mb-4 p-3">{{ form_row(registrationForm.email) }}</div>
        <div class="form-group mb-4">{{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            class : 'form-control ml-3'
        }) }}</div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary w-100 mt-3">Register</button>
    {{ form_end(registrationForm) }}</div>
    </div></div></div>
{% endblock %}
